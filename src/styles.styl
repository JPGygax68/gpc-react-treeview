selection_border = hsla(215, 100%, 50%, 1);
selection_background = lighten(selection_border, 75%);

.gpc.treeview {

  font-family: Arial; // TODO: remove/replace
  
  .node {
  
    //padding: 0.15em;
    padding: 0;
    outline: 0;
    
    > .handle {
      display: inline-block;
      width: 11px;
      height: 11px;
      background-image: url(minus.png);
      margin-right: 0.25em;
      position: relative;
    }

    > span.label-box {
      cursor: default;
      
      > span.label {
        display: inline-block;
        border: solid 0.1em transparent;
        padding: 0.15em;
        border-radius: 0.15em;
      }
      
      display: inline-block;
      //margin-bottom: -0.5em; // too much, but gets rid of spacing between li's
      position: relative;
      
      &:hover {
        > span.label {
          background-color: alpha(selection_background, 0.5);
          border-color: alpha(selection_border, 0.5);
        }
      }
      
      > div {
        display: none; // TODO
        position: absolute;
        left: 0; right: 0;
        z-index: 1; // 
        &.top    { top:   0; bottom: 80%; background-color: rgba(255, 0, 0, 0.2) }
        &.center { top: 20%; bottom: 20%; background-color: rgba(0, 255, 0, 0.2) }
        &.bottom { top: 80%; height: 20%; background-color: rgba(0, 0, 255, 0.2) }
        &:hover { background-color: red; } // TODO: REMOVE, for testing only
      }
    }
    
    > ul {
      list-style-type: none;
      padding-left: 1em;
      margin: 0; //0.1em 0;
    }

    &.closed {
      > .label {
        background-image: url(plus.png);
      }
      > ul {
        //display: none;
      }
    }
    
    &.selected {
      > span.label-box > span.label {
        background-color: selection_background;
        border-color: selection_border;
      }
    }
    
    &.drag-hover {
      > span.label-box > span.label {
        background-color: #FAA;
      }
    }
    
    &.childless {
      > .handle {
        //background: none;
        width: 0;
        margin-right: 0;
      }
    }
  }  
  
  ul.child-nodes > li {
  
    div.insertion-mark {
      width: 100%;
      height: 0; // does not take up vertical space
      position: relative;
      
      //display: none;
      
      &.active {
        display: block;
      }
      
      // Visual insertion mark
      > div {
        border: 0;
        margin: 0;
        padding: 0;
        height: 0.5em;
        position: absolute; //relative;
        left: 0; right: 0;
        overflow: hidden;      
        transform: translateY(-50%);
        z-index: 1;
        
        // Visual elements of the insertion mark:
        > div {
          background-color: transparent; // invisible while not hovering
          
          &.brace {
            position: absolute;
            width: 0.5em;
            top: 0;
            bottom: 0;
            &.left {
              left: -0.25em;
            }
            &.right {
              right: -0.25em;
            }
            transform-origin: 50% 50%;
            transform: rotate(45deg);
          }
          
          &.bar {
            position: absolute;
            top: 50%;
            height: 0.1em;
            left: 0;
            right: 0;
            transform: translateY(-50%);
          }
          
        } // visual elements of insertion marker
        
        &:hover {
          > div { background-color: black; }
        }
      }
    }  
    
    &:last-child {
      > div.insertion-mark {
        height: 0.5em;
      }
    }
  } // child-nodes
}
